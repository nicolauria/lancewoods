<section class="section section-xxl bg-gray-1">
    <div class="container">
        <h2 class="wow fadeScale">Exclusive Merch</h2>
        <div class="row row-lg row-30 row-lg-50">
        <% products.each do |product| %>
            <div class="col-sm-6 col-md-4 col-lg-3">
                <!-- Product-->
                <article class="product wow fadeInRight">
                <div class="product-body">
                    <div class="product-figure"><img src="<%= product.image1 %>" alt="" width="270" height="260"/>
                    </div>
                    <h5 class="product-title"><a href="single-product.html"><%= product.name %></a></h5>
                    <div class="product-price-wrap">
                    <div class="product-price">$<%= product.price %>.00</div>
                    </div>
                </div>
                <div class="product-button-wrap">
                    <div class="product-button"><a class="button button-gray-14 button-zakaria fl-bigmug-line-search74" href="single-product.html"></a></div>
                    <div class="product-button"><a class="button button-primary-2 button-zakaria fl-bigmug-line-shopping202" href="cart-page.html"></a></div>
                </div>
                </article>
            </div>
        <% end %>
        <div class="col-12"><a class="link-classic link-primary wow fadeInUp" href="grid-shop.html">visit the shop</a></div>
        </div>
    </div>
</section>