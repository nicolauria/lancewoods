<section class="section section-xxl bg-default">
    <div class="container">
        <div class="form-style-1">
        <h2 class="title-style-10 wow fadeScale">Join Our <span>News</span>letter</h2>
        <form class="rd-form rd-mailform rd-form-text-center" data-form-output="form-output-global" data-form-type="subscribe" method="post" action="<%= newsletter_url %>">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="form-wrap wow fadeInUp">
            <input class="form-input" id="subscribe-form-1-email" type="email" name="email" data-constraints="@Email @Required">
            <label class="form-label" for="subscribe-form-1-email">Enter Your E-mail</label>
            </div>
            <div class="form-button wow fadeInUp" data-wow-delay=".1s">
            <button class="button button-gray-800 button-zakaria" type="submit">Subscribe</button>
            </div>
        </form>
        </div>
    </div>
</section>