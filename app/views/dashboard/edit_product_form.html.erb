<% content_for :title, 'Edit Product' %>

<%=  render 'static_pages/preloader' %>
<div class="page">
    <!-- Header-->
    <%= render 'static_pages/header' %>

    <!-- Parallax Header -->
    <%= render 'static_pages/parallax_header', background_image: 'images/bg-blog.jpg', title: 'Edit Product' %>

    <section class="section section-xxl bg-default">
        <div class="container">
            <div class="row">
                <form class="rd-form rd-form-text-center d-flex" style="width: 100%" data-form-output="form-output-global" data-form-type="subscribe" method="post" action="<%= edit_product_url(id: @product._id) %>">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                
                    <div class="col-sm-6">
                        <p>Name</p>
                        <input class="form-input" id="subscribe-form-1-email" type="text" name="name" data-constraints="@Required" value="<%= @product.name %>">
                        
                        <p>Price</p>
                        <input class="form-input" id="description" type="text" name="price" data-constraints="@Required" value="<%= @product.price %>">
                        
                        <p>Description</p>
                        <textarea class="form-input" id="date" type="text" name="description" data-constraints="@Required"><%= @product.description %></textarea>
                        
                        <p>Image1</p>
                        <input class="form-input" id="price" type="text" name="image1" data-constraints="@Required" value="<%= @product.image1 %>">

                        <p>Image2</p>
                        <input class="form-input" id="price" type="text" name="image2" data-constraints="@Required" value="<%= @product.image2 %>">
                    </div>

                    <div class="col-sm-6">
                        <p>Image3</p>
                        <input class="form-input" id="price" type="text" name="image3" data-constraints="@Required" value="<%= @product.image3 %>">

                        <p>Thumbnail</p>
                        <input class="form-input" id="event_url" type="text" name="thumbnail" data-constraints="@Required" value="<%= @product.thumbnail %>">

                        <p>Popular</p>
                        <input class="form-input" id="city" type="text" name="popular" data-constraints="@Required" value="<%= @product.popular %>">

                        <p>Category</p>
                        <input class="form-input" id="location" type="text" name="category" data-constraints="@Required" value="<%= @product.category %>">
                        
                        
                        <button class="button button-gray-800 button-zakaria" type="submit">Submit</button>
                    </div>
                </form>
            </div>
            <a style="display: block; margin-top: 50px" href="<%= dashboard_url %>">Back to Dashboard</a>
            <form method="post" action="<%= delete_product_url(id: @product._id) %>" style="margin-top: 50px">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <input type="submit" value="delete product">
            </form>
        </div>
    </section>

    <!-- Footer -->
    <%= render 'static_pages/footer' %>
</div>
<div class="snackbars" id="form-output-global"></div>